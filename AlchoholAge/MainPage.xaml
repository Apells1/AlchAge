<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlchoholAge.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Alchohol Calculator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Get the amount of years until age 21." FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Input Age:" FontSize="16" Padding="30,0,30,0" x:Name="Output"/>
        <Entry FontSize="16" x:Name="agein" Placeholder="age">
          
        </Entry>
        <Button Text="Enter" Clicked="onAge"></Button>
    </StackLayout>

</ContentPage>
